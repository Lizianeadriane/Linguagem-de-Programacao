package Aula08;

public class Exercicio02String {
	public static void main(String[] args) {
		
		String nomeCompleto = "Liziane Adriane Buba";
		String nomeMaiusculo = nomeCompleto.toUpperCase();
		String[] partesNome = nomeMaiusculo.split(" ");
		String primeiroNome = partesNome[0];
		
		
        System.out.println("Meu nome Ã©: " + primeiroNome);
        
		
	}

}
